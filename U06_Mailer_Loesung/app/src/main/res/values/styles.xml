<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
    </style>

    <style name="AppTitleText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline3</item>
    </style>

    <style name="AppVersionText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>

    <style name="AppUrlText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="InputEditText">
        <item name="android:ems">10</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="KeepDataText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>

    <style name="ComposeLabelText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>
</resources>